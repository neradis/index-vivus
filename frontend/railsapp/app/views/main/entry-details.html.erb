<%
	dict_entry = get_dictionary_entry(params[:id].to_i)
%>

<div id="wrapper">
	<h1>index-vivus</h1>

	<div id="neighbor-links" class="box details">
		<%
			if dict_entry.get_prev_entry.is_present
				prev_entry = dict_entry.get_prev_entry.get
				concat link_to prev_entry.get_keyword, details_url(prev_entry.get_id), class: "prev"
			end
		%>
		<%
			if dict_entry.get_next_entry.is_present
				next_entry = dict_entry.get_next_entry.get
				concat link_to next_entry.get_keyword, details_url(next_entry.get_id), class: "next"
			end
		%>
	</div>
	
